@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kayıt Ol - Burgerci</title>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <style>
            * {
              box-sizing: border-box;
              margin: 0;
              padding: 0;
            }

            body {
              font-family: 'Rubik', sans-serif;
            background-image: url("https://images.unsplash.com/photo-1627824944500-a984c0c01f51?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
              background-size: cover;
              background-position: center;
              min-height: 100vh;
              display: flex;
              align-items: center;
              justify-content: center;
              padding: 20px;
            }
            .register-container {
          transform: scale(0.9); /* %90 görünüm */
          transform-origin: top center; /* Üstten küçülmeye başlasın */
        }

            .register-container {
              background-color: rgba(255, 255, 255, 0.95);
              padding: 20px 40px; /* Daha az yükseklik, daha fazla genişlik */
              border-radius: 15px;
              box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
              width: 100%;
              max-width: 450px; /* Eskiden 400px idi → genişlettik */
            }

            .register-container h2 {
              text-align: center;
              color: #e67e22;
              margin-bottom: 25px;
            }

            .form-group {
              display: flex;
              flex-direction: column;
              margin-bottom: 20px;
            }

            .form-group label {
              font-weight: 500;
              margin-bottom: 6px;
              font-size: 15px;
              color: #333;
            }

            .form-group input {
              padding: 12px 14px;
              font-size: 15px;
              border: 1px solid #ccc;
              border-radius: 10px;
              transition: border-color 0.3s;
            }

            .form-group input:focus {
              border-color: #e67e22;
              outline: none;
            }

            .register-btn {
              width: 100%;
              padding: 12px;
              background-color: #e67e22;
              color: white;
              font-size: 16px;
              font-weight: 600;
              border: none;
              border-radius: 10px;
              cursor: pointer;
              transition: background-color 0.3s;
            }

            .register-btn:hover {
              background-color: #cf6e17;
            }

            .login-link {
              text-align: center;
              margin-top: 18px;
              font-size: 14px;
            }

            .login-link a {
              color: #d35400;
              text-decoration: none;
            }

            .login-link a:hover {
              text-decoration: underline;
            }

            @@media (max-width: 480px) {
              .register-container {
                padding: 30px 20px;
              }
            }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Giriş Yap</h2>
        <form method="post">
            <div class="form-group">
                <label>Kullanıcı Adınız</label>
                <input type="text" asp-for="Username" placeholder="Kullanıcı Adınızı Giriniz" required>
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input type="password" asp-for="Password" placeholder="Şifrenizi Giriniz" required>
            </div>
            <button type="submit" class="register-btn">Giriş Yap</button>
        </form>
        <div class="login-link">
            Hesabınız Yok mu? <a href="/Register/Index">Kayıt Ol</a>
        </div>
    </div>
</body>
</html>

