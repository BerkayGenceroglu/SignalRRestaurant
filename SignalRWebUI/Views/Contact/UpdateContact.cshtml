@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content"> 
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Güncelleme Girişi</div>
						</div>
						<input type="hidden" asp-for="ContactID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyon Konumu Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="LocationMap">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarasını Giriniz</label>
								<input type="tel" class="form-control" id="Phone" asp-for="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Giriniz</label>
								<input type="email" class="form-control" id="Mail" asp-for="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterTitle">Açıklama Başlığı</label>
								<input type="text" class="form-control" id="FooterTitle" asp-for="FooterTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklamayı Giriniz</label>
								<textarea rows="5" type="text" class="form-control" id="FooterDescription" asp-for="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenDays">Açık Günler</label>
								<input type="text" class="form-control" id="OpenDays" asp-for="OpenDays">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenDaysDescription">Açık Günler Açıklama</label>
								<input type="text" class="form-control" id="OpenDaysDescription" asp-for="OpenDaysDescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="OpenHours">Açık Saatler</label>
								<input type="text" class="form-control" id="OpenHours" asp-for="OpenHours">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


