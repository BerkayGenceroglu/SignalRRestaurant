@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">QR Kod Oluştur</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group mb-3">
                                <label for="qrValue">Metin veya bağlantı girin</label>
                                <input type="text" name="value" id="qrValue" class="form-control form-control-lg" placeholder="Örn: https://berkay.com" required />
                                <small class="form-text text-muted mt-1">
                                    * QR kodu oluşturmak için metin veya bir URL girin.
                                </small>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning btn-lg px-4">QR Kod Oluştur</button>
                            </div>
                        </form>
                        @if (ViewBag.QRCodeImage != null)
                        {
                            <hr />
                            <div class="text-center mt-4">
                                <img src="@ViewBag.QRCodeImage" alt="QR Kod" style="width:300px; height:300px;" class="img-thumbnail shadow" />
                                <p class="mt-2 text-muted">Yukarıdaki QR kod telefonla taranabilir.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
