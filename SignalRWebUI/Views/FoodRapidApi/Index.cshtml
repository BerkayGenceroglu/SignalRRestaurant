@model List<ResultTastyApi>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">
    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>
    <br />
    <div class="container">
        <div class="heading_container heading_center mb-4">
            <h2 class="text-warning">Lezzetli Tarifler</h2>
            <p class="text-muted">Tasty API üzerinden gelen en güzel yemek tarifleri burada!</p>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="@item.thumbnail_url" class="card-img-top" alt="@item.name" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">@item.name</h5>
                            <p class="card-text">
                                ⏱️ Tahmini Süre:
                                @if (item.total_time_minutes == 0)
                                {
                                    <span>15 dk</span>
                                }
                                else
                                {
                                    <span>@item.total_time_minutes dk</span>
                                }
                            </p>
                            <a href="@item.original_video_url" class="btn btn-outline-warning w-100 mt-auto" target="_blank">
                                🍽️ Videolu Tarife Git
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>
</html>
