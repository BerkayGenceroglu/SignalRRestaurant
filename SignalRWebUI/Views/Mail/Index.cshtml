@model CreateMailDto
@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 mt-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-envelope"></i> Mail Gönder</h4>
                    </div>
                    <form method="post" class="p-3">
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="ReceiverMail" class="form-label">Alıcı E-Posta</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="email" asp-for="ReceiverMail" class="form-control" placeholder="ornek@mail.com" required />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="Subject" class="form-label">Konu</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                    <input type="text" asp-for="Subject" class="form-control" placeholder="Konu başlığını yazın" required />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="Body" class="form-label">Mesaj</label>
                                <textarea asp-for="Body" class="form-control" rows="6" id="editorid" placeholder="Mesajınızı buraya yazın..." required></textarea>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-primary btn-rounded px-4">
                                <i class="fas fa-paper-plane"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 
