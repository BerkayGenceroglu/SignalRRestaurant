@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımızda Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlığı Giriniz</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Görselin Url'ini' Giriniz</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryName">Açıklamayı Giriniz</label>
								<textarea rows="5" type="text" class="form-control" id="categoryName" asp-for="Description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


